<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp">

    <!-- Collections Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/collectionsButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:padding="20dp"
        android:text="Collections"
        android:textAllCaps="false"
        android:gravity="start|center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"
        android:elevation="4dp"
        app:cornerRadius="12dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:backgroundTint="#2196F3"
        android:drawableLeft="@drawable/collections_icon"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Add New Artifact Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addNewArtifactButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:padding="20dp"
        android:text="Add New Artifact"
        android:textAllCaps="false"
        android:gravity="start|center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"
        android:elevation="4dp"
        app:cornerRadius="12dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:backgroundTint="#E53935"
        android:drawableLeft="@drawable/add_artifact_icon"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/collectionsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Add New Artifact Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/editArtifactButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:padding="20dp"
        android:text="Edit Artifact"
        android:textAllCaps="false"
        android:gravity="start|center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"
        android:elevation="4dp"
        app:cornerRadius="12dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:backgroundTint="#FB8C00"
        android:drawableLeft="@drawable/edit"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/addNewArtifactButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Check Availability Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkAvailabilityButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:padding="20dp"
        android:text="Check Availability"
        android:textAllCaps="false"
        android:gravity="start|center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"
        android:elevation="4dp"
        app:cornerRadius="12dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:backgroundTint="#43A047"
        android:drawableLeft="@drawable/check_availability_icon"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/editArtifactButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
